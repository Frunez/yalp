<%= form_for @restaurant, html: {multipart: true} do |f| %>
  <%= f.label :name, :class => 'field' %><br>
  <%= f.text_field :name, :class => 'input' %><br>
  <%= f.label :description, :class => 'field' %><br>
  <%= f.text_area :description, :class => 'input' %><br>
  <%= f.label :image, :class => 'field' %><br>
  <%= f.file_field :image, :class => 'field' %><br>
  <%= f.submit %>
<% end %>
